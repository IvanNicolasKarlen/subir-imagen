@model WebApplication1.Dominio.Entidades.Usuario

<h2>Modifique los datos.</h2>

@using (Html.BeginForm("Editar", "Usuarios", FormMethod.Post,
                              new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(m => m.IdUsuario)

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Apellido)
        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", @placeholder = "Apellido" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FotoPerfil)
        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
        {
            <img src="@Model.FotoPerfil" height="300" class="img-responsive" alt="@Model.Nombre @Model.Apellido" />
        }
        @Html.TextBoxFor(m => m.FotoPerfil, new { type = "file" })
        @*otra opcion
            <input type="file" name="FotoPerfil"/>
        *@
    </div>
    <input type="submit" value="Guardar" class="btn btn-default" />
    <a class="btn btn-default" href="/Usuarios/">Volver</a>
}
